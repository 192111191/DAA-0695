#include<stdio.h>    
int main()  
{  
int n, rem, sum = 0, i;  
printf("Enter a number\n");  
scanf("%d", &n);      
for(i = 1; i < n; i++)  
{  
  rem = n % i;  
  if (rem == 0)  
  {  
   sum = sum + i;  
  }  
}  
if (sum == n)  
   printf("It is a Perfect Number");  
else  
   printf("It is not a Perfect Number");  
}
